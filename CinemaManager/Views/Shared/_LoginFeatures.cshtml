@model CinemaManager.Models.ViewModels.ViewModel

<div class="tab-content">
    <div class="tab-pane active" id="Login">
        <form role="form" class="form-horizontal" >
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LoginViewModel.Email" name="Email" class="form-control" placeholder="Email" />
                </div>
                @*<span asp-validation-for="LoginViewModel.Email" class"text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LoginViewModel.Password" name="Password" class="form-control" placeholder="Password" />
                </div>
                @*<span asp-validation-for="LoginViewModel.Password" class"text-danger"></span>*@
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary btn-sm">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="tab-pane" id="Registration">
        <form role="form" method="post" class="form-horizontal" action="@Url.Action("Register", "Account")">
            @*<div asp-validation-summary="ModelOnly"></div>*@
            <div class="form-group">
                <label  class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-md-3">
                            <select class="form-control">
                                <option>	Mr.	</option>
                                <option>	Ms.	</option>
                            </select>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="RegisterViewModel.Name" name="Name" class="form-control" placeholder="Name" />
                            @*<span asp-validation-for="RegisterViewModel.Year" class"text-danger"></span>*@
                        </div> 
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label  class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RegisterViewModel.Email" name ="Email" class="form-control" placeholder="Email" />
                </div>
                @*<span asp-validation-for="RegisterViewModel.Email" class"text-danger"></span>*@
            </div>
            <div class="form-group">
                <label  class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RegisterViewModel.Password" name="Password" class="form-control" placeholder="Password" />
                </div>
                @*<span asp-validation-for="RegisterViewModel.Password" class"text-danger"></span>*@
            </div>
            <div class="form-group">
                <label  class="col-sm-2 control-label">  </label>
                <div class="col-sm-10">
                    <input asp-for="RegisterViewModel.ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                </div>
                @*<span asp-validation-for="RegisterViewModel.ConfirmPassword" class"text-danger"></span>*@
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" value="Create" class="btn btn-primary btn-sm">
                        Create Account
                    </button>
                    <button type="submit" class="btn btn-default btn-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

