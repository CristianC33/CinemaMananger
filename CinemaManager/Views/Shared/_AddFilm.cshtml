@using CinemaManager.Models.Admins;
@using CinemaManager.ApplicationLogic.DataModel;
@model NewFilmViewModel;
@{
    ViewData["Title"] = "AddFilm";
}
    <form role="form" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
            </div>
            <span asp-validation-for="Name" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="ReleaseDate" class="form-control" placeholder="Release Date" />
            </div>
            <span asp-validation-for="ReleaseDate" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Director" class="form-control" placeholder="Director" />
            </div>
            <span asp-validation-for="Director" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Duration" class="form-control" placeholder="Duration" />
            </div>
            <span asp-validation-for="Duration" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<Film.GenreCategory>()" class="form-control" placeholder="Select Genre"></select>
            </div>
            <span asp-validation-for="Genre" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <select asp-for="Language" asp-items="Html.GetEnumSelectList<Film.LanguageCategory>()" class="form-control" placeholder="Select Language"></select>
            </div>
            <span asp-validation-for="Language" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="Description" /></input>
            </div>
            <span asp-validation-for="Description" class"text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Image" type="file" class="form-control" placeholder="Image"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" formmethod="post" asp-controller="Admin" asp-action="AddFilm" class="btn btn-primary btn-sm">
                    Submit
                </button>
            </div>
        </div>
    </form>
